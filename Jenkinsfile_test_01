pipeline {
    agent any 
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
            stage('Build Docker Image') {       
                steps {
                    sh 'docker --version'             
                    sh 'docker build -t my-test-image:v1 .'
                    sh 'docker images my-test-image:v1'
                    //sh 'docker tag my-test-image:v1 asifmuzammil/my-test-image:v1'
                    sh 'docker run -d -p 8090:80 my-test-image:v1'
                    
                }
            }
            
            stage("push docker image to ghcr.io") {
                steps {
                    // Using secret text credential `ghcr_token` (token only)
                    withCredentials([string(credentialsId: 'ghcr_token', variable: 'TOKEN')]) {
                        sh 'echo $TOKEN | docker login ghcr.io -u areeb-asif --password-stdin'
                        sh 'docker tag my-test-image:v1 ghcr.io/areeb-asif/my-test-image:v1'
                        sh 'docker push ghcr.io/areeb-asif/my-test-image:v1'
                    }
                }
            }
    }
        }